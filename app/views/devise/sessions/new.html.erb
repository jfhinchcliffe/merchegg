<div class='col-md-6 col-md-offset-3'>
  <h2>Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true, placeholder: 'Enter email', label: false %>
      <%= f.input :password, required: false, placeholder: 'Enter password', label: false %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: 'btn btn-block btn-lg btn-info' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>