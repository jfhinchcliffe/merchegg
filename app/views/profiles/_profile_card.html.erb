<% @profiles.each do |profile| %>
  <div class='profile-card'>
    <h2><%= link_to profile.account_name, profile_path(profile) %></h2>
    <%= link_to image_tag(profile.picture_url(:thumbnail)), profile_path(profile) %>
    <p><%= truncate(profile.about, length: 500) %></p>
  </div>
  <hr>
<% end %>