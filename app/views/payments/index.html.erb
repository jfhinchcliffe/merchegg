


<table class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Amount</th>
      <th>Description</th>
      <th>Payment ID</th>
    </tr>
  </thead>
  <tbody>
    <% @payments.each do |payment| %>
    <tr>
      <td><%= format_date(payment.created_at) %></td>
      <td><%= monetise(payment.amount) %></td>
      <td><%= payment.description%></td>
      <td><%= payment.stripe_payment_id %></td>
    </tr>  
    <% end %>
  </tbody>

</table>
