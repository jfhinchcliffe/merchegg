<div class="row">
  <div class="jumbotron">
    <h1><%= @box.title %></h1>
    <p><%= @box.description %></p>
    <p>By <%= link_to @box.user.profile.account_name, profile_path(current_user) %>
    <p><small><%= @box.items.count %> files</small></p>
    <div class="text-center">
        <%= render 'box_admin_functions' if current_user.owns?(@box)%>
    </div>
</div>

<div class="row col-md-6 col-md-offset-3">
  <% if @box.access?(current_user) %>
    <%= render 'file_table' %>
  <% else %>
    <div class="row text-center text-info">
      <h4>Enter code to access files.</h4>
    </div>
    <%= render 'code_form' %>
  <% end %>    
</div>



