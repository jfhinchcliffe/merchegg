<%= simple_form_for @box do |f| %>
  <%= f.input :title, label: false, placeholder: 'Enter a title. eg: "Appetite for Destruction"' %>
  <%= f.input :description, label: false, input_html: {rows: 5}, placeholder: 'Enter a description. eg: "Collection of instrumental songs created in early 2016"' %>
  <%= f.button :submit, class: 'btn-block btn-primary btn-lg' %>
<% end %>