<div class='col-md-6 col-md-offset-3'>
  <h1>Conversations</h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Sent</th>
        <th>Message Count</th>
      </tr>
    </thead>
    <tbody>
      <% @conversations.each do |conversation| %>
      <tr>
        <td><%= link_to "#{time_ago_in_words(conversation.created_at)} ago", conversation_path(conversation) %></td>
        <td><%= conversation.messages.count %></td>
      </tr>  
      <% end %>
    </tbody>
  </table>
</div>