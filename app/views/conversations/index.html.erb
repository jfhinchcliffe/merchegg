<div class='col-md-6 col-md-offset-3 text-center'>
  <h1>Conversations</h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <th><h3 class='text-center'>Sent</h3></th>
        <th><h3 class='text-center'>Message Count</h3></th>
      </tr>
    </thead>
    <tbody>
      <% @conversations.each do |conversation| %>
      <tr>
        <td><h4><%= link_to "#{time_ago_in_words(conversation.created_at)} ago", conversation_path(conversation) %></h4></td>
        <td><h4><%= conversation.messages.count %></h4></td>
      </tr>  
      <% end %>
    </tbody>
  </table>
</div>