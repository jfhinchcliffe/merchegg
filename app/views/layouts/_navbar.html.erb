<%= nav_bar fixed: :top, brand: "MerchEgg", responsive: true do %>
  <%= menu_group do %>
    <%= menu_item "About", about_path %>
    <%= menu_item "Contact", contact_path %>
  <% end %>
  <%= menu_group pull: :right do %>
    <% if current_user %>
      <% if current_user.profile current_user.profile%>
        <%= menu_item "My Profile", profile_path(current_user.profile) %>
      <% else %>
        <%= menu_item "New Profile", new_profile_path %>  
      <% end %>
      <%= menu_item "Log Out", destroy_user_session_path, :method => :delete %>
    <% else %>
      <%= menu_item "Log In", new_user_session_path %>
      <%= menu_item "Sign Up", new_user_registration_path %>
    <% end %>
  <% end %>
<% end %>