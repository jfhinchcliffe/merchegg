<%= simple_form_for [@box, @item] do |f| %>
  <%= f.input :name, label: 'Name',label: false, placeholder: 'Enter an item name. eg. "6 minutes of someone hassling a wolf"' %>
  
  <%= f.input :download_path, as: :file, label: 'Select File to Upload', input_html: { style: 'display: none' }, label_html: { class: "btn btn-info btn-lg btn-block" } %>
  <%= f.button :submit, class: 'btn-block btn-lg btn-primary' %>
<% end %>